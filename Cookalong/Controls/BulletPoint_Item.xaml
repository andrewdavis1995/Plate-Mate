<UserControl x:Class="Cookalong.Controls.BulletPoint_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookalong.Controls"
             mc:Ignorable="d"  FontFamily="Segoe UI"
             Height="24" d:DesignWidth="800">

    <BulletDecorator VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0" Height="20">
        <BulletDecorator.Bullet>
            <Image Source="/Images/bullet.png"/>
        </BulletDecorator.Bullet>
        <TextBlock Name="txtContent" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground ="White" Text="Text goes here"/>
    </BulletDecorator>
</UserControl>
