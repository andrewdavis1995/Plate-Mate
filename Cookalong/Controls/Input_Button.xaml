<UserControl x:Class="Cookalong.Controls.Input_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookalong.Controls"
             FontFamily="{StaticResource Roboto Thin}"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Border Name="bigBorder" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" BorderThickness="0" CornerRadius="8" BorderBrush="{x:Null}" Background="{StaticResource ButtonColour}">
        <Grid>
            <Border Name="Highlight" Background="{StaticResource ButtonHighlight}" Visibility="Collapsed" CornerRadius="8" />
            <Label Name="lblMessage" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="12" Content="Message"/>
        </Grid>
    </Border>
</UserControl>
