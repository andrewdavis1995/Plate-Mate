<UserControl x:Class="Cookalong.Controls.PreviousStepDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookalong.Controls"
             mc:Ignorable="d" 
             Height="65" d:DesignWidth="800" FontFamily="{StaticResource Roboto Thin}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtContent" Foreground="White" Text="Message here" FontSize="12" TextWrapping="Wrap" VerticalAlignment="Center" Margin="5, 2" />
        <Label Grid.Row="1" Background="#44FFFFFF" Margin="5, 0"/>
    </Grid>
</UserControl>
