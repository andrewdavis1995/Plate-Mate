<UserControl x:Class="Cookalong.DraggableObjectGantt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cookalong"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800" Background="{StaticResource RecipeHoverLeave}" MouseLeftButtonDown="UserControl_MouseDown" MouseLeftButtonUp="UserControl_MouseUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="txtData" Grid.Column="1" Text="0" VerticalAlignment="Center" Margin="5" FontSize="14" TextWrapping="Wrap"/>
        <Grid Name="Highlight" Background="#22ffffff" Visibility="Collapsed" Grid.ColumnSpan="10"/>

        <Grid Name="LeftBorder" Grid.Column="0" Background="#44FFFFFF" Cursor="SizeWE" MouseEnter="LeftBorder_MouseEnter" MouseLeave="LeftBorder_MouseLeave"/>
        <Grid Name="RightBorder" Grid.Column="2" Background="#44FFFFFF" Cursor="SizeWE" MouseEnter="RightBorder_MouseEnter" MouseLeave="RightBorder_MouseLeave"/>
    </Grid>
</UserControl>
